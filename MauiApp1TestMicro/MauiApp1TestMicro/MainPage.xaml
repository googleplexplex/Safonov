<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1TestMicro.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                Text="Распознавание речи"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                x:Name="StatusLabel"
                Text="Нажмите кнопку и начните говорить"
                Style="{StaticResource SubHeadline}"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2" />

            <Button
                x:Name="RecordButton"
                Text="Начать запись"
                Clicked="OnRecordClicked"
                HorizontalOptions="Fill"
                FontSize="18"
                Padding="10" />

            <Editor
                x:Name="ResultText"
                Placeholder="Распознанный текст появится здесь..."
                HeightRequest="200"
                IsReadOnly="True"
                FontSize="16"
                Margin="0,20,0,0" />

            <Button
                x:Name="ClearButton"
                Text="Очистить"
                Clicked="OnClearClicked"
                HorizontalOptions="Fill"
                FontSize="16" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
